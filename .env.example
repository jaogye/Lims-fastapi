# Application Settings
APP_NAME=LIMS FastAPI
APP_VERSION=1.0.0
DEBUG=False

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings
DATABASE_HOST=localhost
DATABASE_PORT=1433
DATABASE_NAME=LIMS
DATABASE_USER="jao"
DATABASE_PASSWORD=""
DATABASE_DRIVER=ODBC Driver 17 for SQL Server

# Alternative: Full database URL
# DATABASE_URL=mssql+pyodbc://sa:YourStrongPassword123!@localhost:1433/?driver=ODBC+Driver+17+for+SQL+Server

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# File Storage Settings
UPLOAD_DIR=uploads
REPORTS_DIR=reports
TEMP_DIR=temp
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=app.log

# Pagination Settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Background Tasks Settings (Celery + Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Settings (Required for Password Reset Functionality)
# IMPORTANT: Configure these settings to enable password reset emails
#
# For Gmail:
# 1. Enable 2-factor authentication in your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated App Password as SMTP_PASSWORD (not your regular password)
#
# Example Gmail configuration:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=<username>@gmail.com
SMTP_PASSWORD=gdfgdfvdvsd
SMTP_USE_TLS=True
SMTP_FROM_EMAIL=<username>@gmail.com
SMTP_FROM_NAME=LIMS System

# Alternative SMTP Configurations:
#
# For Outlook/Office365:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@outlook.com
# SMTP_PASSWORD=your-password
#
# For custom SMTP server:
# SMTP_HOST=your-smtp-server.com
# SMTP_PORT=587 (or 465 for SSL)
# SMTP_USERNAME=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# Report Generation Settings
REPORT_TEMPLATES_DIR=templates/reports
SIGNATURE_DIR=signatures

# Business Rules Settings
WORKING_DAYS=[0,1,2,3,4]  # Monday to Friday (0=Monday, 6=Sunday)
SAMPLE_NUMBER_FORMAT={type}{date}{sequence:03d}